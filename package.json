{
  "name": "keydrop-extension",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "xstate:typegen": "xstate typegen \"./src/machines/**/*.machine.ts?(x)\"",
    "dev": "concurrently \"npm-watch\" \"yarn trans\" \"yarn xstate:typegen --watch\"",
    "trans": "i18next-resources-for-ts toc -i ./public/locales/en -o @types/i18nextResources.ts",
    "build:qucik": "REACT_APP_ENVIRONMENT=dev NODE_TLS_REJECT_UNAUTHORIZED='0' craco build",
    "build:dev:chromium": "yarn xstate:typegen && yarn trans && REACT_APP_ENVIRONMENT=dev GENERATE_SOURCEMAP=false craco build",
    "build:prod:chromium": "yarn xstate:typegen && yarn trans && REACT_APP_ENVIRONMENT=prod GENERATE_SOURCEMAP=false craco build",
    "build:dev:gecko": "yarn xstate:typegen && yarn trans && REACT_APP_ENVIRONMENT=dev REACT_APP_BROWSER_ENGINE=gecko GENERATE_SOURCEMAP=false craco build",
    "build:prod:gecko": "yarn xstate:typegen && yarn trans && REACT_APP_ENVIRONMENT=prod REACT_APP_BROWSER_ENGINE=gecko GENERATE_SOURCEMAP=false craco build",
    "test": "jest --watch --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint --cache --fix",
    "prepare": "husky install"
  },
  "watch": {
    "build:qucik": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx,ts,tsx,css"
    }
  },
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@headlessui/react": "^1.7.17",
    "@popperjs/core": "^2.11.8",
    "@types/chrome": "^0.0.250",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/webextension-polyfill": "^0.10.0",
    "@xstate/cli": "0.5.10",
    "@xstate/immer": "0.3.3",
    "@xstate/react": "3.2.2",
    "decimal.js": "^10.4.3",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "framer-motion": "9.0.2",
    "i18next": "^22.4.15",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-fetch-backend": "^5.0.2",
    "i18next-resources-for-ts": "^1.3.3",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.31",
    "prettier-plugin-organize-imports": "^3.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.2.2",
    "react-popper": "^2.3.0",
    "react-scripts": "^5.0.1",
    "react-toastify": "^9.1.3",
    "react-virtuoso": "^4.6.2",
    "tailwind-merge": "^1.14.0",
    "terser-webpack-plugin": "^5.3.7",
    "typescript": "5.1.6",
    "web-vitals": "^3.3.1",
    "xstate": "4.38.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@craco/types": "^7.1.0",
    "@jest/globals": "^29.5.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/eslint": "^8.37.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/prettier": "^2.7.2",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "html-webpack-plugin": "^5.5.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-webextension-mock": "^3.8.9",
    "lint-staged": "^13.2.2",
    "mini-css-extract-plugin": "^2.7.5",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.1.0",
    "webextension-polyfill": "^0.10.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
