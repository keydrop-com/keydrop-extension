{
  "name": "Key-Drop Extension",
  "description": "Boost your Key-Drop experience with a dedicated browser extension. All Key-Drop.com features in one convenient interface!",
  "version": "1.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Key-drop",
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png",
      "48": "favicon-48x48.png",
      "128": "favicon-128x128.png"
    }
  },
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "favicon-48x48.png",
    "128": "favicon-128x128.png"
  },
  "permissions": [
    "cookies"
  ],
  "host_permissions": ["*://*.key-drop.com/*", "*://*.steamcommunity.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.steamcommunity.com/*"],
      "js": ["content-script.js"],
      "css": ["content-script.css"]
    }
  ]
}
